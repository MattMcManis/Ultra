    <!-- Revert Arrow Button -->
    <Style x:Key="IconReload" TargetType="{x:Type Image}">
        <Setter Property="FlowDirection" Value="LeftToRight"/>
        <Setter Property="Source" Value="Resources/Icons/reload.png"/>
    </Style>

